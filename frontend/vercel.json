{
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ],
    "redirects": [
        {
            "source": "/dashboard",
            "destination": "https://dashboard-woad-delta-86.vercel.app",
            "permanent": false
        },
        {
            "source": "/dashboard/(.*)",
            "destination": "https://dashboard-woad-delta-86.vercel.app/$1",
            "permanent": false
        },
        {
            "source": "/api/(.*)",
            "destination": "https://zerodha-clone-backend-green.vercel.app/$1",
            "permanent": false
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}